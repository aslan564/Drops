<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeaderStyle">
        <item name="android:textSize">22sp</item>
        <item name="fontStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/cambay_bold</item>
    </style>

    <style name="LoginStyle">
        <item name="android:textSize">18sp</item>
        <item name="fontStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="hintTextColor">@android:color/white</item>
        <item name="fontFamily">@font/cambay</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="hintTextColor">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/cambay</item>
    </style>

    <style name="TextItalicStyle">
        <item name="android:textSize">16sp</item>
        <item name="hintTextColor">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/cambay_italic</item>
    </style>
</resources>